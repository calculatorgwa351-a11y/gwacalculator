# Flask Configuration
FLASK_DEBUG=1
SECRET_KEY=dev-secret-change-me

# Supabase PostgreSQL Configuration (optional)
PGUSER=your_username
PGPASSWORD=your_password
PGHOST=your_host
PGPORT=6543
PGDATABASE=postgres

# Database Initialization Behavior
# Set to 1 to drop and recreate tables during init_db.py (local development only)
DB_RESET_ON_INIT=1

# SSL Validation
# Set to 1 if you encounter SSL verification errors in local development
SUPABASE_SSL_NO_VERIFY=1
